<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="biogalta_report_invoice_document_inherit_sale" inherit_id="account.report_invoice_document">
        
        <xpath expr="//div[@name='comment']" position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>
    <xpath expr="//p[@name='note']" position="attributes">
        <attribute name="style">display:none;</attribute>
    </xpath>
    <xpath expr="//th[@name='th_description']" position="before">
        <th class="text-left" name="th_default_code">Référence interne</th>
    </xpath>
    <xpath expr="//td[@name='account_invoice_line_name']" position="before">
        <td>
            <span t-field="line.product_id.default_code"/>
        </td>
    </xpath>
        
    <xpath expr="//div[@id='informations']" position="inside">
        <div class="col" t-if="o.partner_id.id" name="origin">
            <strong>Id:</strong>
            <div t-field="o.partner_id.id">1</div>
        </div>
    </xpath>

    <xpath expr="//div[@name='address_same_as_shipping']//t[@t-set='address']" position="after">
        <div class="col-6">
            <t t-set="information_block">
                <div groups="account.group_delivery_invoice_address" name="shipping_address_block">
                    <strong class="d-block mt-3">Adresse de livraison :</strong>
                    <div t-field="o.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                </div>
            </t>
        </div>
        
    </xpath>
    <xpath expr="//div[@name='address_same_as_shipping']//address[@t-field='o.partner_id']" position="before">
        <strong class="d-block mt-3">Adresse de facturation  :</strong>
    </xpath>
        
    </template>
    
</odoo>
